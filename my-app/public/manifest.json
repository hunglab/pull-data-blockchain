{
  "name": "Crypto Extensions",
  "description": "Crypto Wallet Extension",
  "version": "1.0",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Open wallet popup"
  },
  "icons": {
    "16": "crypto_wallet512.png",
    "48": "crypto_wallet512.png",
    "128": "crypto_wallet512.png"
  },
  "start_url": ".",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "activeTab"
  ],
  "optional_permissions": [
    "<all_urls>"
  ]
}